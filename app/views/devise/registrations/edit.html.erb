<div class="card col-md-4 offset-md-4">

  <h2 class="mt-3 mb-3">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <%= render partial: "shared/devisemes" %>

    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Name", class: "mb-3 form-control" %>

    <%= f.email_field :email, placeholder: "Email", class: "mb-3 form-control" %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <%= f.password_field :password, autocomplete: "off", placeholder: "Edit new password", class: "mb-3 form-control" %>

    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm new password", class: "mb-3 form-control" %>

    <%= f.password_field :current_password, autocomplete: "off", placeholder: "Current password", class: "mb-3 form-control" %>

    <%= f.submit "Update", class: "btn btn-primary mb-3" %>

  <% end %>

  <%= link_to "Back", :back, class: "mb-3 d-block" %>

</div>
