<div class="card col-md-4 offset-md-4">

  <h2 class="mt-3 mb-3">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%= render partial: "shared/devisemes" %>

    <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "mb-3 form-control" %>

    <%= f.email_field :email, placeholder: "Email", class: "mb-3 form-control" %>

    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "mb-3 form-control" %>

    <%= f.submit "Sign up", class: "btn btn-primary mb-3" %>

  <% end %>

</div>
