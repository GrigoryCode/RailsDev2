<div class="card col-md-4 offset-md-4">

  <h2 class="mt-3 mb-3">Change your password</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

  <%= render partial: "shared/devisemes" %>
  
    <%= f.hidden_field :reset_password_token %>

    <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "New password", class: "mb-3 form-control" %>

    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password", class: "mb-3 form-control" %>

    <%= f.submit "Change my password" %>

  <% end %>

</div>
