<div class="card col-md-4 offset-md-4">

  <h2 class="mt-3 mb-3">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <%= render partial: "shared/devisemes" %>

    <%= f.email_field :email, placeholder: "Email", class: "mb-3 form-control" %>

    <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "mb-3 form-control" %>

    <%= f.submit "Log in", class: "btn btn-primary mb-3" %>


    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "mb-3 d-block" %>

  <% end %>

</div>
